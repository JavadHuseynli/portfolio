				background: linear-gradient(135deg, #FF8C00 0%, #FFD700 100%);
				color: white;
			}

			/* Gallery Hero */
			.gallery-hero {
				background: linear-gradient(135deg, #FF8C00 0%, #FFD700 50%, #4169E1 100%);
				color: white;
				padding: 4rem 0;
				text-align: center;
				margin-bottom: 3rem;
			}

			.gallery-hero h1 {
				font-size: 3rem;
				margin-bottom: 1rem;
				text-shadow: 2px 2px 4px rgba(0,0,0,0.2);
			}

			.gallery-hero .subtitle {
				font-size: 1.3rem;
				opacity: 0.95;
			}

			/* Destination Sections */
			.destination {
				padding: 4rem 0;
				background: white;
			}

			.destination.alt {
				background: #f8f9fa;
			}

			.destination h2 {
				font-size: 2.5rem;
				color: #FF8C00;
				margin-bottom: 1rem;
				display: flex;
				align-items: center;
				gap: 1rem;
			}

			.flag {
				font-size: 3rem;
			}

			.destination-intro {
				font-size: 1.1rem;
				color: #666;
				margin-bottom: 2rem;
				max-width: 800px;
			}

			/* Photo Grid */
			.photo-grid {
				display: grid;
				grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
				gap: 2rem;
				margin-top: 2rem;
			}

			.photo-item {
				position: relative;
				border-radius: 15px;
				overflow: hidden;
				box-shadow: 0 4px 15px rgba(0,0,0,0.1);
				transition: transform 0.3s ease, box-shadow 0.3s ease;
				background: white;
			}

			.photo-item:hover {
				transform: translateY(-10px);
				box-shadow: 0 10px 30px rgba(0,0,0,0.2);
			}

			.photo-item img {
				width: 100%;
				height: 300px;
				object-fit: cover;
				display: none;
			}

			.photo-item img[src]:not([src=""]) {
				display: block;
			}

			.photo-placeholder {
				width: 100%;
				height: 300px;
				display: flex;
				flex-direction: column;
				align-items: center;
				justify-content: center;
				background: linear-gradient(135deg, #FFD700 0%, #FF8C00 100%);
				color: white;
			}

			.photo-item img[src]:not([src=""]) + .photo-placeholder {
				display: none;
			}

			.placeholder-icon {
				font-size: 4rem;
				margin-bottom: 1rem;
				opacity: 0.9;
			}

			.photo-placeholder p {
				font-size: 1.2rem;
				font-weight: 600;
			}

			@media (max-width: 768px) {
				.gallery-hero h1 {
					font-size: 2rem;
				}

				.gallery-hero .subtitle {
					font-size: 1rem;
				}

				.destination h2 {
					font-size: 1.8rem;
				}

				.photo-grid {
					grid-template-columns: 1fr;
				}

				.container {
					padding: 0 1rem;
				}

				.main-nav .container {
					gap: 1rem;
				}

				.main-nav a {
					padding: 0.5rem 1rem;
					font-size: 0.9rem;
				}
			}
		</style>
	</body>
</html>
