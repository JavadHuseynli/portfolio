		// Poster modal
		window.openPosterModal = function(imageUrl, title) {
			const modal = document.createElement('div');
			modal.className = 'fixed inset-0 bg-black bg-opacity-90 flex items-center justify-center z-50 p-4';
			modal.innerHTML = `
				<div class="max-w-6xl max-h-full overflow-auto">
					<div class="flex justify-between items-center mb-4">
						<h3 class="text-white text-2xl font-bold">${title}</h3>
						<button onclick="this.closest('.fixed').remove()"
							class="text-white text-4xl hover:text-gray-300">
							&times;
						</button>
					</div>
					<img src="${imageUrl}" alt="${title}" class="w-full h-auto rounded-lg">
				</div>
			`;
			modal.onclick = function(e) {
				if (e.target === modal) modal.remove();
			};
			document.body.appendChild(modal);
		};

